@model User

    <h1>Register</h1>
    <form asp-action="CreateUser" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username">
            <p></p><span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName">
            <p></p><span asp-validation-for="FirstName"></span>
        </div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName">
            <p></p><span asp-validation-for="LastName"></span>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password">
            <p></p><span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm">
            <p></p><span asp-validation-for="Confirm"></span>
        </div>

            <input value="Add User" type="submit">
    </form>
