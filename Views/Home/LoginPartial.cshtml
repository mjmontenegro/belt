@model LoginUser

    <h1>Login</h1>  
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="LoginUsername"></label>
            <input asp-for="LoginUsername">
            <p></p><span asp-validation-for="LoginUsername"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword"></label>
            <input asp-for="LoginPassword">
            <p></p><span asp-validation-for="LoginPassword"></span>
        </div>
            <input value="Login" type="submit">
    </form>
